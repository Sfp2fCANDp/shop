{% block title %}Sign Up{% endblock %}

{% block body %}

    <div class="limiter">
    <div class="container-login100" style="background-image: url({{ asset('images/bg-01.jpg') }});">
            <div class="login100-more"></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                {{ form_start(form, {'method': 'POST'}) }}
                <span class="login100-form-title p-b-59">
						Sign Up
					</span>

                    <div class="wrap-input100 validate-input" data-validate="Name is required">
                        {{ form_row(form.last_name, { 'attr': { 'class': 'input100','placeholder': 'Last Name...' }} ) }}
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        {{ form_row(form.first_name, { 'attr': { 'class': 'input100','placeholder': 'First Name...' }} ) }}
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                        {{ form_row(form.email, { 'attr': { 'class': 'input100','placeholder': 'Email address...' }} ) }}
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Password is required">
                        {{ form_row(form.plainPassword.first, { 'attr': { 'class': 'input100','placeholder': 'Password' }} ) }}
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Repeat Password is required">
                        {{ form_row(form.plainPassword.second, { 'attr': { 'class': 'input100','placeholder': 'Repeat Password' }} ) }}
                    </div>

                    <div class="flex-m w-full p-b-33">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
								<span class="txt1">
									I agree to the
									<a href="#" class="txt2 hov1">
										Terms of User
									</a>
								</span>
                            </label>
                        </div>
                    </div>


                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" type="submit">
                                Sign Up
                            </button>
                        </div>
                        {{ form_end(form) }}
                        <a href="{{ path('app_login') }}" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                            Sign in
                            <i class="fa fa-long-arrow-right m-l-5"></i>
                        </a>
                    </div>
            </div>
        </div>
    </div>

    <button type="submit">Register!</button>


    <!--===============================================================================================-->
    <script src="{{ asset('vendor/jquery/jquery-3.2.1.min.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('vendor/animsition/js/animsition.min.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('vendor/bootstrap/js/popper.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('vendor/select2/select2.min.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('vendor/daterangepicker/moment.min.js') }}"></script>
    <script src="{{ asset('vendor/daterangepicker/daterangepicker.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('vendor/countdowntime/countdowntime.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('js/main.js') }}"></script>



{% endblock %}