    <div class="shop_grid_product_area">
        <div class="row">
            <div class="col-12">
                <div class="product-topbar d-flex align-items-center justify-content-between">
                    <!-- Total Products -->
                    <div class="total-products">
                        <p><span>{{ products|length }}</span> products found</p>
                    </div>
                    <div>
                        <a href="{{ path('product_new') }}">
                            <button type="submit" value="5" class="btn essence-btn">Create new</button>
                        </a>
                    </div>
                    <!-- Sorting -->
                    <div class="product-sorting d-flex">
                        <p>Sort by:</p>
                        <form action="#" method="get">
                            <select name="select" id="sortByselect">
                                <option value="value">Highest Rated</option>
                                <option value="value">Newest</option>
                                <option value="value">Price: $$ - $</option>
                                <option value="value">Price: $ - $$</option>
                            </select>
                            <input type="submit" class="d-none" value="">
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">

            <!-- Single Product -->
            {% for product in products %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="single-product-wrapper">
                        <!-- Product Image -->
                        <div class="product-img">
                            <img src="{{ asset('img/product-img/product-7.jpg') }}" alt="">
                            <!-- Hover Thumb -->
                            <img class="hover-img" src="{{ asset('img/product-img/product-8.jpg') }}"
                                 alt="">

                            <!-- Product Badge -->
                            <div class="product-badge new-badge">
                                <span>New {{ product.id }}</span>
                            </div>

                            <!-- Favourite -->
                            <div class="product-favourite">
                                <a href="#" class="favme fa fa-heart"></a>
                            </div>
                        </div>

                        <!-- Product Name (Description) -->
                        <div class="product-description">
                            <span>topshop</span>
                            <a href="{{ product.id }}">
                                {#<a href="#">#}
                                <h6>{{ product.name }}</h6>
                            </a>
                            <p class="product-price">${{ product.price }}.00</p>

                            <!-- Hover Content -->
                            <div class="hover-content">
                                <!-- Add to Cart -->
                                <div class="add-to-cart-btn">
                                    <a href="#" class="btn essence-btn">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}


        </div>
    </div>
